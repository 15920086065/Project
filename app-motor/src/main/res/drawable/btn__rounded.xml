<?xml version="1.0" encoding="utf-8"?>
<inset android:insetLeft="1.0px" android:insetRight="1.0px" android:insetTop="1.0px" android:insetBottom="1.0px"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_enabled="false">
            <shape>
                <gradient android:startColor="#f5f5f5"
                    android:endColor="#f5f5f5"
                    android:angle="270.0" />
                <corners android:radius="30.0dip"  />
                <stroke android:color="#dadada" android:width="1px"></stroke>
            </shape>
        </item>

        <item android:state_pressed="true">
            <shape>
                <gradient android:startColor="#5f92f8"
                    android:endColor="#5f92f8"
                    android:angle="270.0" />
                <corners android:radius="30.0dip" />
            </shape>
        </item>

        <item>
            <shape>
                <!--<stroke android:width="1.0px" android:color="@color/rounded_container_border" /> -->
                <gradient android:startColor="#437df8"
                    android:endColor="#437df8"
                    android:angle="270.0" />
                <corners android:radius="6.0dip" />
            </shape>
        </item>
    </selector>
</inset>